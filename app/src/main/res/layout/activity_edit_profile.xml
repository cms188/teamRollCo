<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- 프로필 정보 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 프로필 사진 변경 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center"
                        android:minHeight="48dp">

                        <!-- 프로필 이미지 -->
                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginBottom="16dp"
                            android:clickable="true"
                            android:focusable="true" >

                            <!-- 이미지 -->
                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/imageView_currentProfile"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/bg_author_profile"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleImageView" />

                            <!-- 사진 아이콘 -->
                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/btnChangeProfileImage"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="bottom|end"
                                android:src="@drawable/ic_camera_add"
                                app:fabSize="mini"
                                app:backgroundTint="@color/primary"
                                app:tint="@color/white"
                                app:elevation="4dp"
                                app:borderWidth="0dp" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 닉네임 변경 -->
                    <LinearLayout
                        android:id="@+id/btnChangeNickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_nickname"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="닉네임"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false" />

                        <!-- 현재 닉네임 표시 -->
                        <TextView
                            android:id="@+id/tvCurrentNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사용자 닉네임"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/notosans_regular"
                            android:layout_marginEnd="8dp"
                            android:maxWidth="120dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:includeFontPadding="false" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right_r"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="52dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 비밀번호 변경 -->
                    <LinearLayout
                        android:id="@+id/btnChangePassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="비밀번호 변경"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"  />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right_r"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 계정 관리 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="20dp"
                        android:gravity="center_vertical">

                        <!-- 제목 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="계정"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/notosans_bold"
                            android:padding="10dp"
                            android:includeFontPadding="false"/>
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 로그아웃 -->
                    <LinearLayout
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_logout"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="로그아웃"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false" />

                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <!-- 회원탈퇴 -->
                    <LinearLayout
                        android:id="@+id/btnDeleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:minHeight="56dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_trash"
                            android:layout_marginEnd="16dp"
                            app:tint="@color/error" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="회원탈퇴"
                                android:textSize="16sp"
                                android:textColor="@color/error"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="계정과 모든 데이터를 삭제합니다"
                                android:textSize="12sp"
                                android:textColor="@color/text_sub"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginTop="2dp"
                                android:includeFontPadding="false" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>