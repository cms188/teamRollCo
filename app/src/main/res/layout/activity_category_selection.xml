<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_modal_bottom"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="24dp"
    tools:context=".ui.recipe.write.CategorySelection">

    <TextView
        android:id="@+id/tv_category_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="6dp"
        android:text="카테고리 설정"
        android:textColor="@color/text_primary"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingBottom="12dp"
        android:text="레시피 종류를 모두 선택해주세요."
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 분류별 -->
            <androidx.cardview.widget.CardView
                style="@style/CategorySectionCard">
                <LinearLayout style="@style/CategorySectionLayout">
                    <TextView style="@style/CategorySectionTitle" android:text="분류별" />
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_type"
                        style="@style/CategoryChipGroup" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 종류별 -->
            <androidx.cardview.widget.CardView
                style="@style/CategorySectionCard">
                <LinearLayout style="@style/CategorySectionLayout">
                    <TextView style="@style/CategorySectionTitle" android:text="종류별" />
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_dish"
                        style="@style/CategoryChipGroup" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 상황별/테마 -->
            <androidx.cardview.widget.CardView
                style="@style/CategorySectionCard">
                <LinearLayout style="@style/CategorySectionLayout">
                    <TextView style="@style/CategorySectionTitle" android:text="상황별/테마" />
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_theme"
                        style="@style/CategoryChipGroup" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_categories"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="16dp" />

</LinearLayout>