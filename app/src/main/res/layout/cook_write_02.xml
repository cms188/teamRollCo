<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 상단 고정 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/search_color"/>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_search_top"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 임시저장 텍스트 -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:text="임시저장"
            android:textColor="#999999"
            android:background="@drawable/bg_gray_rounded"
            android:textSize="14sp" />

        <!-- 저장 버튼 -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_search_bar_orange_border"
            android:gravity="center"
            android:text="저장"
            android:textColor="#666666"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 스크롤 가능한 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <!-- 상단바랑 중간부분 패딩, 마징처리 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <!-- 요리 재료 칸 부분 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="0sp"

                    android:paddingTop="5dp"
                    android:text="재료"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!--재료 입력 레이아웃-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_search_bar_orange_border"
                    android:orientation="horizontal">

                    <!-- 재료 입력칸 -->
                    <LinearLayout
                        android:id="@+id/frame"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search_bar_orange_border"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/a1"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:hint="재료를 입력해주세요"
                            android:textColor="#FFFFFF"
                            aandroid:background="@drawable/bg_main_rounded_top_white"
                            android:textColorHint="#CCCCCC"
                            android:textSize="16dp"/>

                        <EditText
                            android:id="@+id/a2"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/black"
                            aandroid:background="@drawable/bg_login_rounded"
                            android:textColorHint="#CCCCCC"
                            android:textSize="16dp"/>

                        <EditText
                            android:id="@+id/a3"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="0"
                            android:gravity="center"
                            android:textColor="@color/black"
                            aandroid:background="@drawable/bg_login_rounded"
                            android:textColorHint="#CCCCCC"
                            android:textSize="16dp"/>
                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_orange_button_rounded"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="+ 추가"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>




            <!-- 요리 재료 칸 부분 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="0sp"

                    android:paddingTop="5dp"
                    android:text="조리 도구"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!--재료 입력 레이아웃-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_search_bar_orange_border"
                    android:orientation="horizontal">

                    <!-- 재료 입력칸 -->
                    <LinearLayout
                        android:id="@+id/frameb"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_search_bar_orange_border"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/b1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:hint="재료를 입력해주세요"
                            android:textColor="#FFFFFF"
                            aandroid:background="@drawable/bg_main_rounded_top_white"
                            android:textColorHint="#CCCCCC"
                            android:textSize="16dp"/>

                    </LinearLayout>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_back"
                        android:background="@color/white"
                        android:layout_margin="5dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_orange_button_rounded"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:text="+ 추가"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
