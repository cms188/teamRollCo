<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- 좌측: 메인 이미지, 북마크 버튼 컨테이너 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="150dp">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/recipe_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cook_image"
                android:scaleType="centerCrop"
                android:foreground="?attr/selectableItemBackground"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_bookmark_outline_figma"
            android:background="@drawable/bg_bookmark_shape"
            android:padding="8dp"
            app:tint="@android:color/black"
            android:contentDescription="@string/bookmark_button"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 우측: 텍스트 정보 영역 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center_vertical">

        <!-- 요리 이름 -->
        <TextView
            android:id="@+id/recipe_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="요리 이름이 참 많이 길죠? 하지만 어쩔 수 없..."
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- 평점, 리뷰 수, 좋아요 수를 담을 LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5.0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:drawableStartCompat="@drawable/ic_star"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/review_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(1)"
                android:textSize="12sp"
                android:textColor="@color/darker_gray"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_like_filled"
                app:tint="#FF5252" />

            <TextView
                android:id="@+id/like_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                tools:text="12"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- 조리 시간 & 난이도 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cooking_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:drawableStartCompat="@drawable/ic_clock"
                android:text="조리시간"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/darker_gray" />

            <TextView
                android:id="@+id/difficulty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_difficulty"
                android:text="난이도"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:textColor="@color/darker_gray" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/author_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/author_profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_main_circle_gray"
                android:clipToOutline="true"
                android:contentDescription="@string/profile_image"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <!-- 칭호 텍스트 -->
            <TextView
                android:id="@+id/author_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_author_title"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@+id/author_name_text"
                app:layout_constraintStart_toEndOf="@+id/author_profile_image"
                tools:text="요리 장인"
                tools:visibility="visible" />

            <!-- 닉네임 텍스트 -->
            <TextView
                android:id="@+id/author_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/author_title_text"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/profile_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>