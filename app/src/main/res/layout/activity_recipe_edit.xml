<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Recipe_Edit_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".RecipeEditActivity">

    <!-- 상단 고정 툴바 -->
    <LinearLayout
        android:id="@+id/top_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_search_top"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="레시피 수정"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_orange_button_rounded"
                android:gravity="center"
                android:paddingHorizontal="18dp"
                android:text="수정완료"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- 스크롤 가능한 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 기본 정보 (CookWrite01) -->
            <TextView style="@style/CookWriteTitle" android:text="기본 정보" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="카테고리">

                <AutoCompleteTextView
                    android:id="@+id/categoryDropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border">

                <ImageView
                    android:id="@+id/iv_representative_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:background="@color/search_color"
                    android:clickable="true"
                    android:contentDescription="대표 사진을 변경하세요"
                    android:focusable="true"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <EditText
                android:id="@+id/et_recipe_title"
                style="@style/CookWriteEditText"
                android:hint="레시피 제목" />

            <EditText
                android:id="@+id/et_recipe_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:gravity="top|start"
                android:hint="간단한 요리 소개"
                android:inputType="textMultiLine"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <!-- 재료 및 도구 (CookWrite02) -->
            <TextView style="@style/CookWriteTitle" android:text="재료 및 도구" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ingredients_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/button_add_ingredient"
                    style="@style/CookWriteAddButton"
                    android:text="+ 재료 추가" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/tools_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/button_add_tool"
                    style="@style/CookWriteAddButton"
                    android:text="+ 조리도구 추가" />
            </LinearLayout>


            <!-- 조리 과정 (CookWrite03) -->
            <TextView style="@style/CookWriteTitle" android:text="조리 과정" />
            <LinearLayout
                android:id="@+id/steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/button_add_step"
                style="@style/CookWriteAddButton"
                android:layout_marginTop="8dp"
                android:text="+ 과정 추가" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>