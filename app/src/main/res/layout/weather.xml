<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherBackgroundContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_w_cloud_b"
    tools:context=".weather.WeatherMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="뒤로가기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_weather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="오늘의 날씨"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_back_button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/weatherContentScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:id="@+id/weatherOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tempTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4°"
                        android:textColor="@android:color/white"
                        android:textSize="65sp"
                        android:textStyle="bold"
                        tools:text="14°" />

                    <TextView
                        android:id="@+id/skyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="sky"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        tools:text="sky" />

                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="을지로3가"
                        android:textColor="#E6FFFFFF"
                        android:textSize="16sp"
                        tools:text="을지로3가" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도 32%"
                            android:textColor="#CCFFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="습도 32%" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="•"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/popTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="강수확률 10%"
                            android:textColor="#CCFFFFFF"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            tools:text="강수확률 10%" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pm10TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textColor="#CCFFFFFF"
                            android:textSize="13sp"
                            tools:text="미세먼지"/>

                        <ImageView
                            android:id="@+id/pm10ImageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/verygood"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="•"
                            android:textColor="#80FFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/pm25TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="초미세먼지"
                            android:textColor="#CCFFFFFF"
                            android:textSize="13sp"
                            tools:text="초미세먼지"/>

                        <ImageView
                            android:id="@+id/pm25ImageView"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/good"
                            />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/weathericon"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:contentDescription="날씨 아이콘"
                    android:scaleType="centerInside"
                    android:src="@drawable/rain"
                    android:tintMode="src_atop"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:id="@+id/recommendationContainer"
                android:background="@drawable/bg_w_cloud_c"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/recommendationTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오늘 날씨에 어울리는 추천 레시피"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="오늘 날씨에 어울리는 추천 레시피" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recommendationRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        tools:listitem="@layout/cook_card_03" />

                    <ProgressBar
                        android:id="@+id/recommendationProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/recommendationStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="추천 레시피를 찾고 있습니다..."
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp"
                        android:visibility="gone"
                        tools:text="추천 레시피를 찾고 있습니다..."
                        tools:visibility="visible" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
