<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <!-- 탭 선택 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/tab_container_background"
        android:orientation="horizontal"
        android:padding="3dp">

        <!-- 새 알림 탭 -->
        <LinearLayout
            android:id="@+id/tab_new_notifications"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/tab_selected_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tab_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="새 알림"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/badge_new_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:visibility="visible"
                app:cardBackgroundColor="@color/primary_cream"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/text_new_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:minWidth="14dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="1dp"
                    android:text="0"
                    android:textColor="@color/text_hint"
                    android:textSize="10sp"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 이전 알림 탭 -->
        <LinearLayout
            android:id="@+id/tab_previous_notifications"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/tab_unselected_background"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tab_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="이전 알림"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 탭 컨텐츠 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- 새 알림 컨텐츠 -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 새 알림 리스트 -->
                <LinearLayout
                    android:id="@+id/layout_new_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!-- 새 알림 리사이클러뷰 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_new_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <!-- 새 알림 없음 -->
                <LinearLayout
                    android:id="@+id/layout_empty_new_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bell_off"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/notosans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="새로운 알림이 없어요"
                        android:textColor="@color/text_hint"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 새 알림 로딩 -->
                <LinearLayout
                    android:id="@+id/layout_loading_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:text="새 알림을 불러오는 중"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- 이전 알림 컨텐츠 -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_previous"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- 이전 알림 리스트 -->
                <LinearLayout
                    android:id="@+id/layout_previous_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 이전 알림 리사이클러뷰 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_previous_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:clipToPadding="false"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <!-- 이전 알림 없음 -->
                <LinearLayout
                    android:id="@+id/layout_empty_previous_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bell_off"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/notosans_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="4dp"
                        android:text="새로운 알림이 없어요"
                        android:textColor="@color/text_hint"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- 이전 알림 로딩 -->
                <LinearLayout
                    android:id="@+id/layout_loading_previous"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:text="이전 알림을 불러오는 중"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </FrameLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </FrameLayout>

</LinearLayout>