<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 상단 고정 툴바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/search_color"/>

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_search_top"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <!-- 뒤로가기 버튼 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- 임시저장 텍스트 -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:text="임시저장"
            android:textColor="#999999"
            android:background="@drawable/bg_gray_rounded"
            android:textSize="14sp" />

        <!-- 저장 버튼 -->
        <TextView
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_search_bar_orange_border"
            android:gravity="center"
            android:text="저장"
            android:textColor="#666666"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 스크롤 가능한 메인 컨텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="20dp">

            <!-- 대표 사진 타이틀 -->
            <FrameLayout
                android:id="@+id/representative_photo_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border">

                <!-- "대표 사진" 텍스트를 FrameLayout 내부에 배치 -->
                <TextView
                    android:id="@+id/tv_representative_photo_title_inside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:text="대표 사진"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- 이미지를 표시할 ImageView -->
                <ImageView
                    android:id="@+id/iv_representative_photo_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="45dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/search_color"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"
                android:contentDescription="대표 사진을 선택하세요"/>
            </FrameLayout>

            <!-- 레시피 제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="레시피 제목"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 레시피 제목 입력창 -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:hint="레시피 이름을 입력해 주세요"
                android:paddingHorizontal="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#CCCCCC"
                android:textSize="14sp" />

            <!-- 요리 소개 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="요리 소개"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 요리 소개 입력창 -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:gravity="top"
                android:hint="간단한 요리 소개를 입력해주세요"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:textColorHint="#CCCCCC"
                android:textSize="14sp" />

            <!-- 난이도 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="난이도"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 난이도 선택 버튼들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_search_bar_orange_border">

                <!-- 쉬움 버튼 (선택됨) -->
                <TextView
                    android:id="@+id/btn_easy"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="쉬움"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- 보통 버튼 -->
                <TextView
                    android:id="@+id/btn_normal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="보통"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- 어려움 버튼 -->
                <TextView
                    android:id="@+id/btn_hard"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="어려움"
                    android:textColor="#666666"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- 인원 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="인원"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 인원 선택 컨트롤 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <!-- 마이너스 버튼 -->
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="−"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <!-- 인원 수 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 인분"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <!-- 플러스 버튼 -->
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- 조리시간 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="조리시간"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 조리시간 입력 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <!-- 시간 입력 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 시간"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <!-- 분 입력 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0 분"
                    android:textColor="#333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 다음 버튼 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_orange_button_rounded"
                android:gravity="center"
                android:text="다음 >"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>