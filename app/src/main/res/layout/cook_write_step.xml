<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/representative_photo_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_search_bar_orange_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="사진"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_step_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/search_color"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="단계별 사진을 선택하세요"/>

            <ImageButton
                android:id="@+id/btn_remove_this_step"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:contentDescription="이 과정 삭제" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="단계 제목"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_step_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_search_bar_orange_border"
            android:hint="무엇을 하나요?"
            android:paddingHorizontal="16dp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="요리 방법"
            android:gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_step_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_search_bar_orange_border"
            android:gravity="top"
            android:hint="요리 방법을 입력해주세요"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/write_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="타이머 시간 설정"
                android:gravity="center_horizontal"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_timer_display"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_search_bar_orange_border"
                android:gravity="center"
                android:text="00시간 00분 00초"
                android:textColor="#333333"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/button_add_timer"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/bg_orange_button_rounded"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:text="+ 타이머"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</ScrollView>