<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_login_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    tools:context=".LoginActivity">

    <!-- 뒤로가기 버튼 -->
    <ImageView
        android:id="@+id/iv_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="16dp"
        android:contentDescription="뒤로가기"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"/>

    <!-- 로그인 타이틀 -->
    <TextView
        android:id="@+id/tv_login_title_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="로그인"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- 아이디 입력 필드 -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_rounded_background"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="12dp"
        android:hint=" 이메일"
        android:textStyle="bold"
        android:inputType="text"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/text_gray"
        android:textSize="16sp"/>

    <!-- 비밀번호 입력 필드 -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_rounded_background"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="12dp"
        android:hint=" 비밀번호"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColorHint="@color/text_gray"
        android:textSize="16sp" />

    <!-- 로그인 버튼 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/orange_button_rounded_bakground"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 아이디/비밀번호 찾기 & 회원가입을 위한 수평 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_find_credentials_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디/비밀번호 찾기"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:id="@+id/divider_linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        android:background="@color/divider_color" />

    <!-- 소셜계정으로 로그인 텍스트 -->
    <TextView
        android:id="@+id/tv_social_login_prompt_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="소셜계정으로 로그인"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- 소셜 로그인 아이콘 그룹 -->
    <LinearLayout
        android:id="@+id/ll_social_login_icons_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_kakao_login_linear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_kakao"
            android:contentDescription="카카오 로그인" />

        <ImageView
            android:id="@+id/iv_naver_login_linear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_naver"
            android:contentDescription="네이버 로그인" />

        <ImageView
            android:id="@+id/iv_google_login_linear"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google"
            android:contentDescription="구글 로그인" />
    </LinearLayout>
</LinearLayout>