<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.user.UserFeedActivity">

    <!-- 상단 바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로필 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                android:elevation="4dp"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp"
                android:paddingBottom="20dp">

                <!-- 프로필 이미지 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="4dp"
                    android:outlineAmbientShadowColor="@color/primary"
                    android:outlineSpotShadowColor="@color/primary"
                    app:cardCornerRadius="48dp"
                    app:cardElevation="4dp"
                    tools:targetApi="28">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_placeholder" />

                </androidx.cardview.widget.CardView>

                <!-- 칭호 배지 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:outlineAmbientShadowColor="@color/primary_variant"
                    android:outlineSpotShadowColor="@color/primary_variant"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/background_soft_cream"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    tools:targetApi="28"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tv_user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textColor="@color/primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        tools:text="레시피 마스터" />

                </androidx.cardview.widget.CardView>

                <!-- 사용자 닉네임 -->
                <TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="사용자 닉네임" />

                <!-- 통계 정보 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 게시물 수 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tv_post_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_sub"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="게시물"
                            android:textColor="#757575"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="#E0E0E0" />

                    <!-- 팔로워 수 -->
                    <LinearLayout
                        android:id="@+id/layout_followers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tv_follower_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_sub"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="150" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="팔로워"
                            android:textColor="#757575"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="#E0E0E0" />

                    <!-- 팔로잉 수 -->
                    <LinearLayout
                        android:id="@+id/layout_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tv_following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_sub"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="45" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="팔로잉"
                            android:textColor="#757575"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- 팔로우 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_follow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="팔로우"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="16dp"
                    tools:visibility="visible" />
            </LinearLayout>

            <!-- 레시피 목록 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_user_recipes"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>