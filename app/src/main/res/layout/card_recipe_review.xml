<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 상단 영역 (프로필, 이름, 날짜) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 프로필 이미지 -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/bg_author_profile"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <!-- 작성자 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- 작성자명 -->
                <TextView
                    android:id="@+id/textView_authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자"
                    android:textSize="18sp"
                    android:textColor="@color/black20"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false" />

                <!-- 작성 날짜 -->
                <TextView
                    android:id="@+id/textView_reviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025.01.01"
                    android:textSize="14sp"
                    android:textColor="@color/text_sub"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- 더보기 버튼
            <ImageView
                android:id="@+id/imageView_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />
            -->

        </LinearLayout>

        <!-- 별점, 평점 숫자 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 별점 -->
            <!--
            1별     ic_star_fill
            0.5별   ic_star_half
            0별     ic_star_empty
            -->
            <LinearLayout
                android:id="@+id/layout_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_fill"
                    android:layout_marginEnd="2dp" />

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_fill"
                    android:layout_marginEnd="2dp" />

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_fill"
                    android:layout_marginEnd="2dp" />

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_fill"
                    android:layout_marginEnd="2dp" />

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_fill" />

            </LinearLayout>

            <!-- 평점 숫자 -->
            <TextView
                android:id="@+id/textView_ratingScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:textSize="16sp"
                android:textColor="@color/black20"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 리뷰 내용 -->
        <TextView
            android:id="@+id/textView_reviewComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정말 맛있는 레시피에요!"
            android:textColor="@color/black20"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>