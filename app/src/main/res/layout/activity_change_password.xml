<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/text_primary" />

                        <!-- 제목 -->
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_bold"
                            android:includeFontPadding="false"
                            android:text="비밀번호 변경"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/primary_divider" />

                    <!-- 현재 비밀번호 확인 -->
                    <LinearLayout
                        android:id="@+id/currentPasswordSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:text="현재 비밀번호"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/currentPasswordInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxBackgroundColor="@color/background_warm_beige"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="@color/primary"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="1dp"
                            app:endIconMode="password_toggle"
                            app:endIconTint="@color/text_secondary"
                            app:helperText=""
                            app:helperTextEnabled="true"
                            app:helperTextTextColor="@color/text_secondary"
                            app:hintTextColor="@color/text_secondary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/currentPasswordEditText"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/notosans_regular"
                                android:hint="현재 비밀번호를 입력하세요"
                                android:includeFontPadding="false"
                                android:inputType="textPassword"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_secondary"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- 현재 비밀번호 확인 버튼 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVerifyCurrentPassword"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:backgroundTint="@color/primary"
                            android:fontFamily="@font/notosans_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="비밀번호 확인"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:cornerRadius="16dp" />

                        <!-- 비밀번호 찾기 버튼 -->
                        <TextView
                            android:id="@+id/btnFindPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:padding="4dp"
                            android:text="비밀번호를 잊으셨나요?"
                            android:textColor="@color/primary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/passwordChangeSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- 구분선 -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/primary_divider" />

                        <!-- 새 비밀번호 입력 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false"
                                android:text="새 비밀번호"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <!-- 비밀번호 조건 규칙 -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newPasswordInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="@color/background_warm_beige"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/primary"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:endIconMode="password_toggle"
                                app:endIconTint="@color/text_secondary"
                                app:helperText=""
                                app:helperTextEnabled="true"
                                app:helperTextTextColor="@color/text_secondary"
                                app:hintTextColor="@color/text_secondary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/newPasswordEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/notosans_regular"
                                    android:hint="새 비밀번호를 입력하세요"
                                    android:includeFontPadding="false"
                                    android:inputType="textPassword"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/text_primary"
                                    android:textColorHint="@color/text_secondary"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- 비밀번호 강도 표시 -->
                            <LinearLayout
                                android:id="@+id/passwordStrengthIndicator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <!-- 강도 표시 바 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="4dp"
                                    android:orientation="horizontal">

                                    <View
                                        android:id="@+id/strengthBar1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="4dp"
                                        android:layout_weight="1"
                                        android:background="@color/primary_divider" />

                                    <View
                                        android:id="@+id/strengthBar2"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="4dp"
                                        android:layout_weight="1"
                                        android:background="@color/primary_divider" />

                                    <View
                                        android:id="@+id/strengthBar3"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@color/primary_divider" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/strengthText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_regular"
                                    android:includeFontPadding="false"
                                    android:text="약함"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 새 비밀번호 확인 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="20dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false"
                                android:text="새 비밀번호 확인"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/confirmPasswordInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="@color/background_warm_beige"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxStrokeColor="@color/primary"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="1dp"
                                app:endIconMode="password_toggle"
                                app:endIconTint="@color/text_secondary"
                                app:helperText=""
                                app:helperTextEnabled="true"
                                app:helperTextTextColor="@color/text_secondary"
                                app:hintTextColor="@color/text_secondary">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/confirmPasswordEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:fontFamily="@font/notosans_regular"
                                    android:hint="새 비밀번호를 다시 입력하세요"
                                    android:includeFontPadding="false"
                                    android:inputType="textPassword"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:textColor="@color/text_primary"
                                    android:textColorHint="@color/text_secondary"
                                    android:textSize="14sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- 저장 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/notosans_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="비밀번호 변경"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:cornerRadius="16dp" />

</LinearLayout>