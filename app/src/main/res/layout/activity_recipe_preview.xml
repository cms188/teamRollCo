<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <FrameLayout
        android:id="@+id/headerImageFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/testimg1" />

        <!-- 그라데이션 -->
        <View
            android:id="@+id/gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay" />

    </FrameLayout>

    <!-- 바텀시트 -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_modal_bottom"
        android:orientation="vertical"
        android:elevation="16dp"
        android:outlineSpotShadowColor="@color/main_orange"
        android:outlineAmbientShadowColor="@color/main_orange"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="600dp">

        <!-- 바텀시트 핸들 -->
        <View
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="#00000000" />

        <!-- 고정 헤더 -->
        <LinearLayout
            android:id="@+id/header_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- 제목 -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center_horizontal"
                android:text="요리 이름"
                android:textSize="30sp"
                android:textColor="@color/text_brown"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"/>


            <!-- 요리 정보 (조리시간, 난이도, 별점) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <!-- 조리시간 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="조리시간"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/textView_cookingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0분"
                        android:textSize="16sp"
                        android:textColor="@color/black20"
                        android:fontFamily="@font/notosans_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0" />

                <!-- 난이도 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fire"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="난이도"
                        android:textSize="12sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/textView_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="보통"
                        android:textSize="16sp"
                        android:textColor="@color/black20"
                        android:fontFamily="@font/notosans_bold"
                        android:includeFontPadding="false"/>
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#E0E0E0" />

                <!-- 별점 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star_fill"
                        android:scaleX="1.2"
                        android:scaleY="1.2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평점"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/textView_rateAVG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/notosans_bold"
                        android:includeFontPadding="false" />
                </LinearLayout>

            </LinearLayout>


            <!-- 상호작용 버튼 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- 좋아요 버튼 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white_card">

                    <LinearLayout
                        android:id="@+id/btn_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <!-- 빈 하트 -->
                            <ImageView
                                android:id="@+id/icon_like"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_like"/>

                            <!-- 채워진 하트 -->
                            <ImageView
                                android:id="@+id/icon_like_filled"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_like_filled"
                                android:visibility="gone"/>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/textView_like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="14sp"
                            android:textColor="@color/black40"
                            android:fontFamily="@font/notosans_bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="좋아요"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub"
                            android:fontFamily="@font/notosans_medium"
                            android:layout_marginTop="2dp"
                            android:includeFontPadding="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- 북마크 버튼 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white_card">

                    <LinearLayout
                        android:id="@+id/btn_bookmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <!-- 빈 북마크 -->
                            <ImageView
                                android:id="@+id/icon_bookmark"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_bookmark"/>

                            <!-- 채워진 북마크 -->
                            <ImageView
                                android:id="@+id/icon_bookmark_filled"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_bookmark_filled"
                                android:visibility="gone"/>

                        </FrameLayout>

                        <!-- 북마크 상태 텍스트 -->
                        <TextView
                            android:id="@+id/textView_bookmarkStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저장하기"
                            android:textSize="14sp"
                            android:textColor="@color/black40"
                            android:fontFamily="@font/notosans_bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="북마크"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub"
                            android:fontFamily="@font/notosans_medium"
                            android:layout_marginTop="2dp"
                            android:includeFontPadding="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <!-- 탭 선택 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="16dp">

                <RadioGroup
                    android:id="@+id/frame_pageSelector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="@color/white_card">

                    <RadioButton
                        android:id="@+id/btn_pageSummary"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="요약"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@animator/btn_text_selector"
                        android:background="@drawable/selector_bg_slidable_btn" />

                    <RadioButton
                        android:id="@+id/btn_pageReview"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:button="@null"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="리뷰"
                        android:fontFamily="@font/notosans_bold"
                        android:textColor="@animator/btn_text_selector"
                        android:background="@drawable/selector_bg_slidable_btn"
                        android:checked="true" />

                </RadioGroup>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 콘텐츠 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="24dp">

            <!-- 요약 -->
            <ScrollView
                android:id="@+id/scrollView_summaryContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:paddingBottom="100dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 요약 내용 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="요약 내용"
                        android:textSize="16sp"
                        android:padding="16dp" />

                </LinearLayout>

            </ScrollView>

            <!-- 리뷰 -->
            <LinearLayout
                android:id="@+id/layout_reviewContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="8dp"
                    android:paddingBottom="100dp"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />

                <!-- 로딩 인디케이터 -->
                <ProgressBar
                    android:id="@+id/progressBar_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="24dp"
                    android:visibility="gone" />

                <!-- 빈 상태 텍스트 -->
                <TextView
                    android:id="@+id/textView_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="등록된 리뷰가 없습니다"
                    android:textSize="16sp"
                    android:textColor="@color/text_sub"
                    android:gravity="center"
                    android:visibility="gone" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>