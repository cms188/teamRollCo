<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 툴바 -->
    <include layout="@layout/toolbar_basic"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- 프로필 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- 사용자 프로필 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- 프로필 이미지 -->
                        <ImageView
                            android:id="@+id/imageView_profile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bg_author_profile"
                            android:scaleType="centerCrop"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="0dp"
                            android:gravity="center_vertical" >

                            <!-- 정보 수정 -->
                            <TextView
                                android:id="@+id/textView_editInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="정보 수정"
                                android:textSize="14sp"
                                android:textColor="@color/text_sub"
                                android:fontFamily="@font/notosans_regular"
                                android:includeFontPadding="false"
                                android:layout_marginTop="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackgroundBorderless"/>

                            <!-- 사용자 명 -->
                            <TextView
                                android:id="@+id/textView_authorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이름"
                                android:textSize="24sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- 칭호 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_badge"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="@color/primary_cream"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="16dp"
                            android:paddingEnd="10dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/textView_badge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="칭호를 설정해보세요"
                                android:textSize="18sp"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false" />

                            <ImageView
                                android:id="@+id/icon_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_right_r"
                                android:alpha="0.7"
                                android:scaleX="1.2"
                                android:scaleY="1.2"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 내가 쓴 레시피 -->
                        <LinearLayout
                            android:id="@+id/layout_myRecipes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="내 레시피"
                                android:textSize="14sp"
                                android:textColor="@color/text_sub"/>

                            <TextView
                                android:id="@+id/textView_myRecipesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false"/>
                        </LinearLayout>

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="@color/primary_divider"
                            android:layout_gravity="center"/>

                        <!-- 팔로워 -->
                        <LinearLayout
                            android:id="@+id/layout_followers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="팔로워"
                                android:textSize="14sp"
                                android:textColor="@color/text_sub"/>

                            <TextView
                                android:id="@+id/textView_followersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false"/>
                        </LinearLayout>

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:background="@color/primary_divider"
                            android:layout_gravity="center"/>

                        <!-- 팔로잉 -->
                        <LinearLayout
                            android:id="@+id/layout_following"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackgroundBorderless">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="팔로잉"
                                android:textSize="14sp"
                                android:textColor="@color/text_sub"/>

                            <TextView
                                android:id="@+id/textView_followingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="22sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- 빠른 메뉴 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_quickMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 첫째 줄 메뉴 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <!-- 북마크 -->
                        <LinearLayout
                            android:id="@+id/layout_bookmark"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_bookmark"
                                app:tint="@color/orange"/>
                            <TextView style="@style/UserPageMenuText"
                                android:text="북마크"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                        <View style="@style/VerticalDivider" />

                        <!-- 좋아요한 레시피 -->
                        <LinearLayout
                            android:id="@+id/layout_liked_recipes"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_like"
                                app:tint="#F46659"/>
                            <TextView style="@style/UserPageMenuText"
                                android:text="좋아요"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                        <View style="@style/VerticalDivider" />

                        <!-- 리뷰 관리 -->
                        <LinearLayout
                            android:id="@+id/layout_reviewManage"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_review_outline"
                                app:tint="@color/orange" />
                            <TextView style="@style/UserPageMenuText"
                                android:text="리뷰 관리"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginHorizontal="16dp"/>

                    <!-- 둘째 줄 메뉴 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp">

                        <!-- 내가 쓴 팁 -->
                        <LinearLayout
                            android:id="@+id/layout_my_tips"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_pen"
                                app:tint="@color/orange"/>
                            <TextView style="@style/UserPageMenuText"
                                android:text="내가 쓴 팁"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                        <View style="@style/VerticalDivider" />

                        <!-- 좋아요한 팁 -->
                        <LinearLayout
                            android:id="@+id/layout_liked_tips"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_thumb_up_outline"
                                app:tint="#F46659"/>
                            <TextView style="@style/UserPageMenuText"
                                android:text="좋아요한 팁"
                                android:textColor="@color/text_secondary"
                                />
                        </LinearLayout>
                        <View style="@style/VerticalDivider" />

                        <!-- 최근 본 레시피 -->
                        <LinearLayout
                            android:id="@+id/layout_recentRecipe"
                            style="@style/UserPageMenuButton">
                            <ImageView style="@style/UserPageMenuIcon"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/orange"/>
                            <TextView style="@style/UserPageMenuText"
                                android:text="최근 본 레시피"
                                android:textColor="@color/text_secondary"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- 설정 메뉴 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <!-- 메뉴 이름 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="설정"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans_bold"
                        android:padding="16dp"
                        android:gravity="start"/>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 알레르기 설정 -->
                    <LinearLayout
                        android:id="@+id/layout_allergy_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="알레르기"
                            android:textSize="16sp"
                            android:textColor="@color/black20"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right_r"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/primary_divider"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>

                    <!-- 메뉴 -->
                    <LinearLayout
                        android:id="@+id/layout_notification_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="푸시 알림"
                            android:textSize="16sp"
                            android:textColor="@color/black20"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right_r"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- 내비게이션 바 -->
    <include
        android:id="@+id/bottom_navigation_view"
        layout="@layout/navigation_bottom"/>

</LinearLayout>