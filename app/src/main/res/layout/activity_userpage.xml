<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 툴바 -->
    <include layout="@layout/toolbar_basic" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="4dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <!-- 프로필 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <!-- 사용자 프로필 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- 프로필 이미지 -->
                        <ImageView
                            android:id="@+id/imageView_profile"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_author_profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="0dp">

                            <!-- 사용자 명 -->
                            <LinearLayout
                                android:id="@+id/textView_editInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView_authorName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="6dp"
                                    android:text="이름"
                                    android:textColor="@color/text_primary"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:alpha="0.7"
                                    android:paddingTop="2dp"
                                    android:scaleX="1"
                                    android:scaleY="1"
                                    android:src="@drawable/ic_arrow_right_r"
                                    app:tint="@color/text_primary" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_badge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:background="@drawable/tab_container_background"
                                android:gravity="center|start"
                                android:orientation="horizontal"
                                android:padding="3dp">
                                <!-- 칭호 -->
                                <TextView
                                    android:id="@+id/textView_badge_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_medium"
                                    android:includeFontPadding="false"
                                    android:paddingStart="6dp"
                                    android:paddingEnd="6dp"
                                    android:text="칭호"
                                    android:textColor="@color/primary_variant"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 내가 쓴 레시피 -->
                        <LinearLayout
                            android:id="@+id/layout_myRecipes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="내 레시피"
                                android:textColor="@color/text_sub"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView_myRecipesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/primary_divider" />

                        <!-- 팔로워 -->
                        <LinearLayout
                            android:id="@+id/layout_followers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="팔로워"
                                android:textColor="@color/text_sub"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView_followersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false"
                                android:text="0"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@color/primary_divider" />

                        <!-- 팔로잉 -->
                        <LinearLayout
                            android:id="@+id/layout_following"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="팔로잉"
                                android:textColor="@color/text_sub"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/textView_followingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosans_medium"
                                android:includeFontPadding="false"
                                android:text="0"
                                android:textColor="@color/black20"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 빠른 액션 메뉴 (개선된 그리드 디자인) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_quickMenu"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="6dp">

                    <!-- 메뉴 그리드 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 북마크 -->
                        <LinearLayout
                            android:id="@+id/layout_bookmark"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bookmark_filled"
                                app:tint="@color/primary_light" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="북마크"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- 좋아요 -->
                        <LinearLayout
                            android:id="@+id/layout_like"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:alpha="0.8"
                                android:src="@drawable/ic_like_filled" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="좋아요"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- 리뷰 관리 -->
                        <LinearLayout
                            android:id="@+id/layout_reviewManage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:alpha="0.7"
                                android:src="@drawable/ic_star_fill"
                                app:tint="@color/warning" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="리뷰 관리"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- 최근 본 레시피 -->
                        <LinearLayout
                            android:id="@+id/layout_recentRecipe"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/primary_variant" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/notosans_medium"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="최근 본"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 설정 메뉴 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- 메뉴 이름 -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_medium"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:padding="16dp"
                            android:paddingStart="26dp"
                            android:text="설정"
                            android:textColor="@color/text_sub"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/soft_divider" />

                    <!-- 테마 -->
                    <LinearLayout
                        android:id="@+id/layout_theme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:text="테마"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:alpha="0.6"
                            android:paddingTop="2dp"
                            android:src="@drawable/ic_arrow_right_r"
                            app:tint="@color/text_hint" />

                    </LinearLayout>

                    <!-- 메뉴 -->
                    <LinearLayout
                        android:id="@+id/layout_none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/notosans_medium"
                            android:includeFontPadding="false"
                            android:text="메뉴"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:alpha="0.6"
                            android:paddingTop="2dp"
                            android:src="@drawable/ic_arrow_right_r"
                            app:tint="@color/text_hint" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- 내비게이션 바 -->
    <include
        android:id="@+id/bottom_navigation_view"
        layout="@layout/navigation_bottom" />

</LinearLayout>