<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frame_layout"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:contentDescription="메인 콘텐츠 스크롤 영역"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:clipChildren="false"
                android:clipToPadding="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/orange_background_view"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="@color/orange"/>

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="270dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="96dp"
                        android:gravity="top"
                        android:lineSpacingExtra="-2sp"
                        android:text="@string/title"
                        android:textAppearance="@style/title"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:id="@+id/white_content_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_main_rounded_top_white"
                        android:layout_marginTop="150dp"
                        android:clipChildren="false"
                        android:paddingTop="24dp"
                        android:paddingBottom="16dp"
                        android:elevation="15dp">

                        <!-- 카테고리 버튼들 -->
                        <LinearLayout
                            android:id="@+id/button_row_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <LinearLayout
                                android:id="@+id/category_button_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_01"
                                    android:contentDescription="한식"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="한식"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_02"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="양식"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_03"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="중식"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_04"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="일식"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button_row_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp">

                            <LinearLayout
                                android:id="@+id/category_button_11"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_05" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="디저트"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_12"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_06"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="분식"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_13"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_07"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="음료"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/category_button_14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center_horizontal"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:clickable="true"
                                android:focusable="true">
                                <ImageView
                                    android:layout_width="56dp"
                                    android:layout_height="56dp"
                                    android:background="@drawable/cate1_08"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="더보기"
                                    android:textAppearance="@style/category"
                                    android:textColor="#333333"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Hot Cook -->
                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/title1"
                            android:textAppearance="@style/title1"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/title1_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/title1_1"
                            android:textAppearance="@style/title1_1"
                            android:textColor="@android:color/darker_gray"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/hot_cook_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clipToPadding="false"
                            android:paddingStart="16dp"
                            tools:listitem="@layout/cook_card_01"/>

                        <!-- Pick Cook -->
                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="25dp"
                            android:text="@string/title2"
                            android:textAppearance="@style/title1"
                            android:textColor="@android:color/black"/>
                        <TextView
                            android:id="@+id/title2_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/title2_1"
                            android:textAppearance="@style/title1_1"
                            android:textColor="@android:color/darker_gray"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pick_cook_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clipToPadding="false"
                            android:paddingStart="16dp"
                            tools:listitem="@layout/cook_card_02"/>

                        <!-- 15분 이하 간단요리 -->
                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="30dp"
                            android:text="15분 이하 간단요리"
                            android:textAppearance="@style/title1"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:id="@+id/title4_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/title4_1"
                            android:textAppearance="@style/title1_1"
                            android:textColor="@android:color/darker_gray"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/simple_recipe_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clipToPadding="false"
                            android:paddingStart="16dp"
                            tools:listitem="@layout/cook_card_02"/>

                        <!-- [수정] 요리 팁 섹션 -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="30dp">
                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title3"
                                android:textAppearance="@style/title1"
                                android:textColor="@android:color/black"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <ImageButton
                                android:id="@+id/iv_see_all_tips"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/cook_tips_view_pager"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="16dp"
                            tools:layout="@layout/cook_tip_01"
                            android:clipToPadding="false"
                            android:clipChildren="false"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="30dp"
                            android:text="요리 꿀팁 O/X 퀴즈"
                            android:textAppearance="@style/title1"
                            android:textColor="@android:color/black" />
                        <include
                            android:id="@+id/quiz_card"
                            layout="@layout/layout_quiz_card" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="40dp"
                            android:text="지금이 제철! 이달의 식재료"
                            android:textAppearance="@style/title1"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="클릭하면 이 재료가 들어간 레시피들을 볼 수 있어요."
                            android:textAppearance="@style/title1_1"
                            android:textColor="@android:color/darker_gray"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/seasonal_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:clipToPadding="false"
                            android:paddingStart="16dp"
                            tools:listitem="@layout/item_seasonal_ingredient"/>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:menu="@menu/menu_bottom_nav"
            app:labelVisibilityMode="unlabeled"
            app:itemIconSize="25dp"/>
    </LinearLayout>

    <!-- 오른쪽 상단 고정 버튼들 -->
    <FrameLayout
        android:id="@+id/notification_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp">
        <ImageButton
            android:id="@+id/top_notification_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_main_circle_white"
            android:src="@drawable/ic_notification"
            android:contentDescription="알림"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:tint="@android:color/black"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
        <View
            android:id="@+id/notification_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_notification_dot"
            android:elevation="5dp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </FrameLayout>

    <ImageButton
        android:id="@+id/top_search_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/bg_main_circle_white"
        android:src="@drawable/ic_search"
        android:contentDescription="검색"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:tint="@android:color/black"
        android:elevation="4dp"/>

</FrameLayout>