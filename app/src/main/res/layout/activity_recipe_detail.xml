<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cream">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_basic" />

    <!-- 배경 이미지 -->
    <FrameLayout
        android:id="@+id/headerImageFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:src="@drawable/testimg1" />
        <View
            android:id="@+id/gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay" />
    </FrameLayout>

    <!-- 바텀시트 -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_modal_bottom"
        android:orientation="vertical"
        android:elevation="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:background="#DDDDDD" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 헤더 콘텐츠 (제목, 정보, 버튼 등) -->
                <LinearLayout
                    android:id="@+id/header_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="16dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- 제목, 요리정보, 상호작용 버튼 등... -->
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="center_horizontal"
                        android:text="요리 이름"
                        android:textSize="30sp"
                        android:textColor="@color/text_brown"
                        android:layout_marginBottom="4dp"
                        android:includeFontPadding="false"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tv_creation_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub"
                            tools:text="2024.08.07"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" · "
                            android:textSize="12sp"
                            android:textColor="@color/text_sub"/>

                        <TextView
                            android:id="@+id/tv_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/text_sub"
                            tools:text="조회수 1,234"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_clock"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="조리시간"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                            <TextView
                                android:id="@+id/textView_cookingTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0분"
                                android:textSize="16sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_fire"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="난이도"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                            <TextView
                                android:id="@+id/textView_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="보통"
                                android:textSize="16sp"
                                android:textColor="@color/black20"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_star_fill"
                                android:scaleX="1.2"
                                android:scaleY="1.2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="평점"
                                android:textSize="12sp"
                                android:textColor="#666666" />
                            <TextView
                                android:id="@+id/textView_rateAVG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:fontFamily="@font/notosans_bold"
                                android:includeFontPadding="false" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:paddingHorizontal="16dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white_card">
                            <LinearLayout
                                android:id="@+id/btn_like"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="20dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp">
                                    <ImageView
                                        android:id="@+id/icon_like"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_like"/>
                                    <ImageView
                                        android:id="@+id/icon_like_filled"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_like_filled"
                                        android:visibility="gone"/>
                                </FrameLayout>
                                <TextView
                                    android:id="@+id/textView_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="14sp"
                                    android:textColor="@color/black40"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="좋아요"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_sub"
                                    android:fontFamily="@font/notosans_medium"
                                    android:layout_marginTop="2dp"
                                    android:includeFontPadding="false" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white_card">
                            <LinearLayout
                                android:id="@+id/btn_bookmark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="20dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?android:attr/selectableItemBackground">
                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp">
                                    <ImageView
                                        android:id="@+id/icon_bookmark"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/ic_bookmark"/>
                                    <ImageView
                                        android:id="@+id/icon_bookmark_filled"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_bookmark_filled"
                                        android:visibility="gone"/>
                                </FrameLayout>
                                <TextView
                                    android:id="@+id/textView_bookmarkStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="저장하기"
                                    android:textSize="14sp"
                                    android:textColor="@color/black40"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="북마크"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_sub"
                                    android:fontFamily="@font/notosans_medium"
                                    android:layout_marginTop="2dp"
                                    android:includeFontPadding="false" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- 탭 선택 (원본) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/original_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="16dp">
                        <RadioGroup
                            android:id="@+id/frame_pageSelector"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:background="@color/white_card">
                            <RadioButton
                                android:id="@+id/btn_pageSummary"
                                style="@style/ReviewListTabButton"
                                android:text="레시피"
                                android:checked="true" />
                            <RadioButton
                                android:id="@+id/btn_pageReview"
                                style="@style/ReviewListTabButton"
                                android:text="리뷰" />
                        </RadioGroup>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- 콘텐츠 (탭에 따라 내용이 바뀜) -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp">
                    <!-- 요약, 리뷰 Layout... (기존과 동일) -->
                    <LinearLayout
                        android:id="@+id/scrollView_summaryContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"/>
                    <LinearLayout
                        android:id="@+id/layout_reviewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_reviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:clipToPadding="false"/>
                        <ProgressBar
                            android:id="@+id/progressBar_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="24dp"
                            android:visibility="gone" />
                        <TextView
                            android:id="@+id/textView_empty"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="등록된 리뷰가 없습니다"
                            android:textColor="@color/text_sub"
                            android:textSize="16sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- 고정될 탭 (가장 마지막에 선언하여 위에 보이도록 함) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sticky_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="16dp"
        android:visibility="gone"
        tools:visibility="visible">
        <RadioGroup
            android:id="@+id/frame_pageSelector_sticky"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/white_card">
            <RadioButton
                android:id="@+id/btn_pageSummary_sticky"
                style="@style/ReviewListTabButton"
                android:text="레시피"
                android:checked="true" />
            <RadioButton
                android:id="@+id/btn_pageReview_sticky"
                style="@style/ReviewListTabButton"
                android:text="리뷰" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>