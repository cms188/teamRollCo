<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white20"
    android:fitsSystemWindows="true">

    <!-- 툴바 -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar_basic_lagacy" />

    <!-- 배경 이미지 -->
    <FrameLayout
        android:id="@+id/headerImageFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            tools:src="@drawable/testimg1" />

        <View
            android:id="@+id/gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay" />
    </FrameLayout>

    <!-- 바텀시트 -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_modal_bottom"
        android:elevation="16dp"
        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- 핸들 -->
        <View
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 헤더 콘텐츠 -->
                <LinearLayout
                    android:id="@+id/header_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="20dp">

                    <!-- 제목 -->
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/notosans_bold"
                        android:gravity="center_horizontal"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="4dp"
                        android:text="요리 이름"
                        android:textColor="@color/text_primary"
                        android:textSize="28sp" />

                    <!-- 글 정보 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/tv_creation_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_sub"
                            android:textSize="13sp"
                            tools:text="2024.01.01" />

                        <!-- 구분선 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:background="@color/soft_divider" />

                        <TextView
                            android:id="@+id/tv_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_sub"
                            android:textSize="13sp"
                            tools:text="조회수 1,234" />
                    </LinearLayout>

                    <!-- 통계 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:outlineAmbientShadowColor="@color/text_hint"
                        android:outlineSpotShadowColor="@color/text_hint"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="4dp"
                                    android:outlineAmbientShadowColor="@color/text_secondary"
                                    android:outlineSpotShadowColor="@color/text_secondary"
                                    app:cardBackgroundColor="@color/background_warm_beige"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="1dp"
                                    tools:targetApi="28">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_clock"
                                        app:tint="@color/primary_light" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textView_cookingTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false"
                                    android:text="0분"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_regular"
                                    android:includeFontPadding="false"
                                    android:text="조리시간"
                                    android:textColor="@color/text_sub"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="4dp"
                                    android:outlineAmbientShadowColor="@color/text_secondary"
                                    android:outlineSpotShadowColor="@color/text_secondary"
                                    app:cardBackgroundColor="@color/background_warm_beige"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="1dp"
                                    tools:targetApi="28">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_fire"
                                        app:tint="@color/primary_light" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textView_difficulty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false"
                                    android:text="보통"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_regular"
                                    android:includeFontPadding="false"
                                    android:text="난이도"
                                    android:textColor="@color/text_sub"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginBottom="4dp"
                                    android:outlineAmbientShadowColor="@color/text_secondary"
                                    android:outlineSpotShadowColor="@color/text_secondary"
                                    app:cardBackgroundColor="@color/background_warm_beige"
                                    app:cardCornerRadius="24dp"
                                    app:cardElevation="1dp"
                                    tools:targetApi="28">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_star_fill"
                                        app:tint="@color/primary_light" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/textView_rateAVG"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_bold"
                                    android:includeFontPadding="false"
                                    android:text="4.5"
                                    android:textColor="@color/text_primary"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/notosans_regular"
                                    android:includeFontPadding="false"
                                    android:text="평점"
                                    android:textColor="@color/text_sub"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- 액션 버튼 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/primary_variant"
                            android:outlineSpotShadowColor="@color/primary_variant"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            tools:targetApi="28">

                            <LinearLayout
                                android:id="@+id/btn_like"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="16dp">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:id="@+id/icon_like"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_like"
                                        app:tint="@color/primary" />

                                    <ImageView
                                        android:id="@+id/icon_like_filled"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_like_filled"
                                        android:visibility="gone"
                                        app:tint="@color/error" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosans_bold"
                                        android:includeFontPadding="false"
                                        android:text="좋아요"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/textView_like_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosans_medium"
                                        android:includeFontPadding="false"
                                        android:text="1,234"
                                        android:textColor="@color/text_sub"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/primary_variant"
                            android:outlineSpotShadowColor="@color/primary_variant"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="3dp"
                            tools:targetApi="28">

                            <LinearLayout
                                android:id="@+id/btn_bookmark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="20dp"
                                android:paddingVertical="16dp">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp">

                                    <ImageView
                                        android:id="@+id/icon_bookmark"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_bookmark"
                                        app:tint="@color/primary" />

                                    <ImageView
                                        android:id="@+id/icon_bookmark_filled"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/ic_bookmark_filled"
                                        android:visibility="gone"
                                        app:tint="@color/primary_light" />
                                </FrameLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosans_bold"
                                        android:includeFontPadding="false"
                                        android:text="북마크"
                                        android:textColor="@color/text_primary"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/textView_bookmarkStatus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosans_medium"
                                        android:includeFontPadding="false"
                                        android:text="저장하기"
                                        android:textColor="@color/text_sub"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- 탭 선택 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/original_tab_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:outlineAmbientShadowColor="@color/primary_light"
                        android:outlineSpotShadowColor="@color/primary_light"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        tools:targetApi="28">

                        <RadioGroup
                            android:id="@+id/frame_pageSelector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tab_container_background"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/btn_pageSummary"
                                style="@style/ReviewListTabButton"
                                android:checked="true"
                                android:text="레시피" />

                            <RadioButton
                                android:id="@+id/btn_pageReview"
                                style="@style/ReviewListTabButton"
                                android:text="리뷰" />
                        </RadioGroup>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- 콘텐츠 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:paddingBottom="100dp">

                    <!-- 요약 내용 -->
                    <LinearLayout
                        android:id="@+id/scrollView_summaryContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:visibility="visible" />

                    <!-- 리뷰 내용 -->
                    <LinearLayout
                        android:id="@+id/layout_reviewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_reviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:paddingTop="16dp" />

                        <ProgressBar
                            android:id="@+id/progressBar_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:indeterminateTint="@color/primary"
                            android:visibility="gone"
                            tools:visibility="gone" />

                        <TextView
                            android:id="@+id/textView_empty"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:gravity="center"
                            android:text="등록된 리뷰가 없어요."
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <View
        android:id="@+id/gradient_sticky_overlay"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/gradient_overlay_white"
        android:rotation="180"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- 스티키 탭 선택기 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sticky_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:outlineAmbientShadowColor="@color/primary_light"
        android:outlineSpotShadowColor="@color/primary_light"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        tools:targetApi="28"
        tools:visibility="visible">

        <RadioGroup
            android:id="@+id/frame_pageSelector_sticky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_container_background"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_pageSummary_sticky"
                style="@style/ReviewListTabButton"
                android:checked="true"
                android:text="레시피" />

            <RadioButton
                android:id="@+id/btn_pageReview_sticky"
                style="@style/ReviewListTabButton"
                android:text="리뷰" />
        </RadioGroup>
    </androidx.cardview.widget.CardView>


    <!-- 요리하기 버튼 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_cooking"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:outlineAmbientShadowColor="@color/primary_variant"
            android:outlineSpotShadowColor="@color/primary_variant"
            android:text="요리하기"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="16dp"
            app:rippleColor="@color/primary_variant"
            tools:visibility="visible"
            tools:targetApi="28" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>