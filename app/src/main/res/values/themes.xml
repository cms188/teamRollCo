<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.recipe_pocket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 전역 기본 폰트 -->
        <item name="android:fontFamily">@font/notosans_regular</item>
        <!-- 기본 텍스트 색상 -->
        <item name="android:textColor">@color/text_brown</item>

        <!-- 주요 브랜드 색상 (앱 바, 주요 버튼 등) -->
        <item name="colorPrimary">@color/orange</item>
        <!-- colorPrimary의 어두운 버전 (상태 표시줄 등) -->
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <!-- colorPrimary 위에 표시되는 텍스트/아이콘 색상 -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 브랜드 색상 (체크박스, 포커스된 텍스트 필드 등) -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 상태 표시줄 색상 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- 상태 표시줄 아이콘 색상 (어두운 배경이므로 밝게) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.recipe_pocket" parent="Base.Theme.recipe_pocket" />

    <!-- ▼▼▼ 아래 스타일들을 추가해주세요 ▼▼▼ -->

    <!-- ReviewListActivity의 정보 아이템 (조리시간, 난이도, 평점) 공통 스타일 -->
    <style name="ReviewListInfoItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ReviewListActivity의 정보 아이콘 스타일 -->
    <style name="ReviewListInfoIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <!-- ReviewListActivity의 정보 라벨 텍스트 스타일 -->
    <style name="ReviewListInfoLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- ReviewListActivity의 정보 값 텍스트 스타일 -->
    <style name="ReviewListInfoValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black20</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- ReviewListActivity의 탭 버튼(요약/리뷰) 스타일 -->
    <style name="ReviewListTabButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textColor">@animator/btn_text_selector</item>
        <item name="android:background">@drawable/selector_bg_slidable_btn</item>
    </style>

    <!-- RecipeDetailActivity 요약 탭의 섹션 타이틀 스타일 -->
    <style name="RecipeDetailSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- RecipeDetailActivity 요약 탭의 섹션 박스 스타일 -->
    <style name="RecipeDetailSectionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_gray_rounded_light</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- ReviewWriteActivity의 섹션 타이틀 스타일 -->
    <style name="ReviewWriteSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- ReviewWriteActivity의 라디오 버튼 그룹 스타일 -->
    <style name="ReviewWriteRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ReviewWriteActivity의 라디오 버튼 스타일 -->
    <style name="ReviewWriteRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@animator/btn_text_selector</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_radio_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- card_recipe_review.xml의 별점 이미지 스타일 -->
    <style name="RatingStar">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

</resources>