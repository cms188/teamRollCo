<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:textSize">28dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title1">
        <item name="android:textSize">25dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title1_1">
        <item name="android:textSize">15dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="category">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 추가할 스타일 1: 선택된 단계 -->
    <style name="StepIndicatorActive">
        <item name="android:textColor">#FF8A00</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 추가할 스타일 2: 비선택된 단계 -->
    <style name="StepIndicatorInactive">
        <item name="android:textColor">#666666</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FollowInfoText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">#E0E0E0</item>
    </style>

    <style name="UserPageMenuButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="UserPageMenuIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="UserPageMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 원형 이미지 -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>